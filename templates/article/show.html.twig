{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container">
                <h1 class="m-5">{{ article.title }}</h1>

            <img class="" src="{{asset('img/' ~ article.picture)}}" alt="Card image cap">

                <p class="mt-5">{{ article.content }}</p>

{% if app.user %}
    <a class="btn btn-outline-info" href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i> Editer l'article</a>
    {{ include('article/_delete_form.html.twig') }}
{% endif %}
</div>
{% endblock %}
